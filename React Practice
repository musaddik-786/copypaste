function NewProduct(props) {
  function saveProduct(product) {
    console.log("i am inside new product");
    console.log(product);

    // calling parent function
    props.pranay(product);
  }

  return (
    <div className='new-product'>
      <Search onSaveProduct={saveProduct} />
    </div>
  );
}

